<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PhoneNumberActivity">

    <com.example.alisehomeproject.Viewsmode.HighSemiBoldTextView
        android:id="@+id/tv_number"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="@string/number"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />



    <com.example.alisehomeproject.Viewsmode.HighBoldTextView
        android:id="@+id/textView2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:maxLines="2"
        android:text="@string/otpdata"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_number"
        app:layout_constraintTop_toTopOf="@+id/tv_number" />

    <com.example.alisehomeproject.Viewsmode.HighBoldEditText
        android:id="@+id/et_otp"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="260dp"
        android:background="@drawable/background_border"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Otp"
        android:inputType="phone"
        android:padding="5dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bu_submit"
        style="@style/MyButton"
        android:layout_width="100dp"
        android:layout_height="40dp"

        android:layout_marginStart="50dp"
        android:layout_marginEnd="260dp"
        android:layout_marginBottom="444dp"
        android:text="Continue"
        android:textAlignment="center"
        android:textColor="#101010"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_otp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bu_resendotp"
        style="@style/MyButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:visibility="gone"

        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="283dp"
        android:layout_marginBottom="416dp"
        android:text="Continue"
        android:textAlignment="center"
        android:textColor="#101010"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.318"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.example.alisehomeproject.Viewsmode.HighSemiBoldTextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="0.59"
        android:textColor="#101010"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toEndOf="@+id/bu_submit"
        app:layout_constraintTop_toTopOf="@+id/bu_submit"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_editnumber"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="186dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_number"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pencil" />


</androidx.constraintlayout.widget.ConstraintLayout>